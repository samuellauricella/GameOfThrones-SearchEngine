
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Sign Up</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.1/css/materialize.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.1/js/materialize.min.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all' %>
  </head>
  <body>
    <br>
    <div class="loginheader">
    <h2>Log in</h2>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
    <form class="col s12">
      <div class="overinput">
        <div class="input">
          <%= f.input :email, required: false, autofocus: true, class:"validate", label: false %>
          <%= f.label :email, required: false, autofocus: true, class:"validate" %>

          <%= f.input :password, required: false, class:"validate", label: false %>
          <%= f.label :password, required: false, autofocus: true, class:"validate" %>

          <%= f.input :remember_me,label: false ,as: :boolean if devise_mapping.rememberable? %>
        </div>
      </div>
    </form>
    <div class="row">
      <div class="input-field inline">
        <%= f.button :submit, "Log in" %>
      </div>
    </div>
    </div>
    <% end %>

    <div class="signin">
    <%= render "devise/shared/links", class:"signin" %>
  </div>
  </body>
</html>
